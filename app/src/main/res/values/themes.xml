<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.SpeedCheck" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_black</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="NewApi">@drawable/ic_speed</item>
        <item name="android:statusBarColor">#111</item>
    </style>
    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">#111111</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:ignore="NewApi">@drawable/ic_speed</item>
        <item name="postSplashScreenTheme">@style/Theme.SpeedCheck</item>
    </style>
</resources>
